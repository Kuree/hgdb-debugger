{
  "name": "hgdb-vscode",
  "displayName": "hgdb-vscode",
  "description": "Debugger for HGDB Framework",
  "publisher": "keyiz",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.33.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kuree/hgdb-debugger.git"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "hgdb",
        "label": "HGDB Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to a debug symbol table",
                "default": "${command:AskForProgramName}"
              },
              "runtimeIP": {
                "type": "string",
                "description": "IP address of the machine that's running simulation",
                "default": "0.0.0.0"
              },
              "runtimePort": {
                "type": "number",
                "description": "Port number of the machine that's running simulation",
                "default": 8888
              },
              "srcPath": {
                "type": "string",
                "description": "User's source code mapped to",
                "default": ""
              },
              "dstPath": {
                "type": "string",
                "description": "Remote reserver's code path",
                "default": ""
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "hgdb",
            "request": "launch",
            "name": "Ask for a hgdb symbol table",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "runtimeIP": "0.0.0.0",
            "runtimePort": 8888
          }
        ],
        "configurationSnippets": [
          {
            "label": "HGDB Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected debug file.",
            "body": {
              "type": "hgdb",
              "request": "launch",
              "name": "Ask for a hgdb symbol table",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "runtimeIP": "0.0.0.0",
              "runtimePort": 8888
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.kratos-debug.getProgramName"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "watch": "tsc -watch -p ./",
    "test": "mocha tests/**/*.ts --require ts-node/register --recursive --exit"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.33.0",
    "chai": "^4.2.0",
    "glob": "^7.1.4",
    "mocha": "^6.2.3",
    "ts-node": "^9.1.1",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-debugadapter-testsupport": "^1.37.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@types/internal-ip": "^4.1.0",
    "@types/request": "^2.48.3",
    "@types/string-template": "^1.0.2",
    "@types/websocket": "^1.0.1",
    "await-notify": "^1.0.1",
    "dev": "^0.1.3",
    "express": "^4.17.1",
    "internal-ip": "^4.3.0",
    "request": "^2.88.0",
    "string-template": "^1.0.0",
    "sync-request": "^6.1.0",
    "vscode-debugadapter": "^1.37.1",
    "vscode-debugprotocol": "^1.37.0",
    "websocket": "^1.0.33"
  }
}
